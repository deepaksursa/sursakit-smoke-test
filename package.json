{
  "name": "sursakit-smoke-test",
  "version": "1.0.0",
  "description": "Production-ready test automation framework for junior developers - Playwright + TypeScript + Page Object Model",
  "scripts": {
    "test": "playwright test --headed",
    "test:headless": "playwright test",
    "test:debug": "playwright test --debug",
    "test:smoke": "playwright test tests/",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "report:open": "playwright show-report --host 0.0.0.0",
    "clean": "rm -rf test-results",
    "clean:all": "rm -rf test-results playwright-report",
    "install:browsers": "playwright install",
    "setup": "npm install && playwright install",
    "help": "echo 'Available commands: test, test:headless, test:debug, test:smoke, test:ui, report, clean, setup'"
  },
  "keywords": [
    "playwright",
    "typescript", 
    "test-automation",
    "page-object-model",
    "junior-developers",
    "framework"
  ],
  "author": "Your Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 