{
  "name": "sursakit-smoke-test",
  "version": "1.0.0",
  "description": "Production-ready test automation framework for junior developers - Playwright + TypeScript + Page Object Model",
  "type": "module",
  "scripts": {
    "test": "playwright test --headed",
    "test:headless": "playwright test",
    "test:debug": "playwright test --debug",
    "test:smoke": "playwright test tests/",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report reports",
    "report:open": "playwright show-report reports --host 0.0.0.0",
    "clean": "rm -rf test-results",
    "clean:all": "rm -rf test-results playwright-report",
    "install:browsers": "playwright install",
    "setup": "npm install && playwright install",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "help": "echo 'Available commands: test, test:headless, test:debug, test:smoke, test:ui, report, clean, setup, lint, lint:fix'"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "dotenv": "^16.3.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3",
    "mailslurp-client": "^16.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
